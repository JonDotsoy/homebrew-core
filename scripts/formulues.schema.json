{
  "$ref": "#/definitions/Manifest",
  "definitions": {
    "Manifest": {
      "type": "object",
      "properties": {
        "formules": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "pattern": "^\\w+(?:\\w|-)*$"
              },
              "description": {
                "type": "string"
              },
              "license": {
                "type": "string"
              },
              "template": {
                "anyOf": [
                  {
                    "type": "string",
                    "const": "bun_make"
                  },
                  {
                    "type": "string",
                    "const": "bun_make_spec_md"
                  }
                ]
              },
              "source": {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "const": "github"
                  },
                  "username": {
                    "type": "string"
                  },
                  "repository": {
                    "type": "string"
                  },
                  "branch": {
                    "type": "string"
                  },
                  "workspace": {
                    "type": "string",
                    "allOf": [
                      {
                        "pattern": "^\\.\\/"
                      },
                      {
                        "pattern": "\\/$"
                      }
                    ]
                  }
                },
                "required": [
                  "type",
                  "username",
                  "repository",
                  "branch"
                ],
                "additionalProperties": false
              },
              "strategy": {
                "type": "string",
                "const": "lastCommit"
              }
            },
            "required": [
              "name",
              "description",
              "license",
              "template",
              "source",
              "strategy"
            ],
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}