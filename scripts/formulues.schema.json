{
  "$ref": "#/definitions/Manifest",
  "definitions": {
    "Manifest": {
      "type": "object",
      "properties": {
        "formules": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "pattern": "^\\w+(?:\\w-)*$"
              },
              "template": {
                "type": "string",
                "const": "bun_make"
              },
              "source": {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "const": "github"
                  },
                  "username": {
                    "type": "string"
                  },
                  "repository": {
                    "type": "string"
                  }
                },
                "required": ["type", "username", "repository"],
                "additionalProperties": false
              },
              "strategy": {
                "type": "string",
                "const": "lastCommit"
              }
            },
            "required": ["name", "template", "source", "strategy"],
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}
